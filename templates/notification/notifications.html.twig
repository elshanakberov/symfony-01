{% extends "base.html.twig" %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h5>Unread Notifications</h5>
        </div>
        <ul class="list-group list-group-flush">
            {% for notification in notifications %}

                <li class="list-group-item">

                    {% if notification is like %}

                        <a href="{{ path('micro_post_by_user',{'username': notification.likedBy.username}) }}">
                            {{ notification.likedBy.username }}</a>
                        liked your
                        <a href="{{ path('micro_post_post',{'id':notification.microPost.id}) }}">post</a>

                        <a href="{{ path('notification_acknowledge',{'id':notification.id}) }}">OK</a>

                     {% elseif notification is follow %}

                         <a href="{{ path('micro_post_by_user',{'username': notification.followedBy.username}) }}">
                             {{ notification.followedBy.username }}</a>
                         Started following you

                         <a href="{{ path('notification_acknowledge',{'id':notification.id}) }}">OK</a>


                    {% endif %}


                </li>

            {% endfor %}
        </ul>
    </div>
{% endblock %}